

#ifndef MAKER_H
#define MAKER_H

namespace core
{

	template<typename Param> class maker
	{
		shared_ptr<Param> param;

		public:

			maker()
			{
			}

			maker(const maker & other)
			{
				param = other.param->clone();
			}

			shared_ptr<Param> get_param();

			virtual void make(const shared_ptr<Param> & param) = 0;

	};

}


#endif
